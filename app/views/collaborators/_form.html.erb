<% if current_user.admin? || (current_user.premium? && wiki.user == current_user) %>
  <div class="collab-list">
    <strong>Collaborators on this wiki:</strong>
      <ul class="list-unstyled">
      <% @users.each do |user| %>
        <li><%= user.name %> (<i><%= user.email %></i>) |
          <% if @wiki.users.include?(user) %>
            <% collaborator = Collaborator.where(user_id: user.id, wiki_id: @wiki.id).first %>
            <%= link_to "Delete collaborator", wiki_collaborator_path(wiki_id: @wiki.id, user_id: user.id), method: :delete %>
          <% else %>
            <%= link_to "Add as collaborator", wiki_collaborators_path(wiki_id: @wiki.id, user_id: user.id), method: :post %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
