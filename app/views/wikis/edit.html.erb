<div class="container">
  <div class = "row">
    <h3 style="margin-left: 15px">Edit Wiki</h3>
    <p><%= link_to "Guidelines for Wikis", '#'%> |
    <%= link_to "<< Return to All Wikis", wikis_path %></p>
      <div class="col-md-12">
        <%= form_for @wiki do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
          </div>
          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, rows: 25, class: 'form-control', placeholder: "Enter wiki body" %>
          </div>
          <div class="form-group">
            <%= render partial: 'form', locals: {f: f} %>
          </div>
          <div class="form-group">
            <%= render partial: 'collaborators/form', locals: {f: f, wiki: @wiki} %>
          </div>
          <div class="form-group">
            <%= f.submit "Save", class: 'btn btn-default' %>
          </div>
        </div>
      <% end %>
    </div>
</div>
