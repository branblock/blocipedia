<div class="container">
  <div class = "row">
    <h2>Wikis</h2>
    <% if policy(Wiki.new).create? %>
      <p><strong><u><%= link_to "Create a New Wiki >>", new_wiki_path %></strong></u></p>
    <% end %>
    <% @wikis.each do |wiki| %>
      <% if policy(wiki).show? %>
        <div class="media">
          <div class="media-body">
            <p class="media-heading">
              <%= link_to (markdown(wiki.title)), wiki %>
            </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
